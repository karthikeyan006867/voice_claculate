{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Voice Calculator",
  "version": "1.0.0",
  "identifier": "com.voicecalculator.app",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Voice Calculator",
        "width": 450,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 350,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "android": {
      "minSdkVersion": 24
    }
  }
}
